{
  "name": "@urql/build-tools",
  "version": "0.0.1",
  "description": "The build tools we use for urql packages",
  "main": "dist/index.js",
  "source": "src/index.ts",
  "bin": "dist/cli.js",
  "sideEffects": false,
  "scripts": {
    "build": "rimraf dist && tsc",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:FormidableLabs/urql-build-tools.git"
  },
  "keywords": [
    "build-tools",
    "urql"
  ],
  "author": "Formidable",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FormidableLabs/urql-build-tools/issues"
  },
  "homepage": "https://github.com/FormidableLabs/urql-build-tools",
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@types/node": "^12.7.1",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-transform-object-assign": "^7.2.0",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "babel-plugin-closure-elimination": "^1.3.0",
    "babel-plugin-transform-async-to-promises": "^0.8.14",
    "gzip-size": "^5.1.1",
    "rollup": "^1.19.4",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-buble": "^0.19.8",
    "rollup-plugin-commonjs": "^10.0.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-typescript2": "^0.22.1",
    "sade": "^1.6.1",
    "terser": "^4.1.4"
  }
}
